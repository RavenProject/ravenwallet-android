<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:animateLayoutChanges="true"
    android:background="@color/black_trans"
    android:filterTouchesWhenObscured="true"
    android:isScrollContainer="false">

    <LinearLayout
        android:id="@+id/signal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true"
        android:background="@drawable/receive_layout"
        android:clickable="true"
        android:isScrollContainer="false"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="81dp">

            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="@dimen/bread_margin"
                android:layout_marginRight="@dimen/bread_margin"
                android:background="@drawable/ic_close_black_24dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="81dp" />

            <com.ravenwallet.presenter.customviews.BRText
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/bread_margin"
                android:text="@string/add_new_address"
                android:textColor="@color/almost_black"
                android:textSize="@dimen/header"
                app:customTFont="CircularPro-Bold.otf"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="81dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/extra_light_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.ravenwallet.presenter.customviews.BREdit
                android:id="@+id/address_edit"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/paste_button"
                android:background="@android:color/transparent"
                android:ellipsize="middle"
                android:ems="10"
                android:hint="@string/Send.toLabel"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="@drawable/address_edit_text_selector" />

            <com.ravenwallet.presenter.customviews.PasteButton
                android:id="@+id/paste_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/scan_button"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:maxLines="1"
                android:minWidth="60dp"
                android:minHeight="60dp"
                android:paddingStart="8dp"
                android:paddingTop="10dp"
                android:paddingEnd="8dp"
                android:text="@string/Send.generateAddressLabel"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                app:buttonType="4"
                app:isBreadButton="true" />

            <com.ravenwallet.presenter.customviews.ScanButton
                android:id="@+id/scan_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/import_contact"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:maxLines="1"
                android:minWidth="60dp"
                android:minHeight="60dp"
                android:paddingStart="8dp"
                android:paddingTop="10dp"
                android:paddingEnd="8dp"
                android:text="@string/Send.generateAddressLabel"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                app:buttonType="4"
                app:isBreadButton="true" />

        </RelativeLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/extra_light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.ravenwallet.presenter.customviews.BREdit
                android:id="@+id/address_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:hint="@string/name_hint"
                android:inputType="textPersonName"
                android:maxLength="250"
                android:textSize="@dimen/sub_header" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/extra_light_gray" />

        <com.ravenwallet.presenter.customviews.BRButton
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:text="@string/add"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:buttonType="1"
            app:isBreadButton="true" />

    </LinearLayout>

</ScrollView>