<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/extra_light_blue_background"
    android:padding="@dimen/bread_margin"
    tools:context="com.ravenwallet.presenter.activities.SetPinActivity">

    <com.ravenwallet.presenter.customviews.BRText
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RecoverWallet.header"
        android:textColor="@color/almost_black"
        android:textSize="@dimen/header"
        app:customTFont="CircularPro-Bold.otf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/faq_button"
        android:layout_width="@dimen/faq_dimen"
        android:layout_height="@dimen/faq_dimen"
        android:layout_alignParentEnd="true"
        android:background="@drawable/faq_question_black" />

    <com.ravenwallet.presenter.customviews.BRText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/RecoverWallet.subheader"
        android:textColor="@color/almost_black"
        android:textSize="@dimen/sub_header" />

    <LinearLayout
        android:id="@+id/layout_rg_bips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:orientation="vertical"
        tools:visibility="visible"
        android:visibility="gone">

        <com.ravenwallet.presenter.customviews.BRText
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which protocol to use"
            android:textColor="@color/almost_black"
            android:textSize="@dimen/sub_header"
            app:customTFont="CircularPro-Bold.otf" />

        <RadioGroup
            android:id="@+id/rg_bips"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.ravenwallet.presenter.customviews.BRRadioButton
                android:id="@+id/rbpBip44"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:buttonTint="@color/primaryColor"
                android:checked="true"
                android:padding="10dp"
                android:textColor="@color/white"
                android:button="@null"
                android:textSize="16sp"
                android:background="@drawable/bg_rb_tab"
                android:text="Bip 44" />

            <com.ravenwallet.presenter.customviews.BRRadioButton
                android:id="@+id/rbpBip32"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:button="@null"
                android:padding="10dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_rb_tab"
                android:buttonTint="@color/primaryColor"
                android:textSize="16sp"
                android:text="Bip 32" />
        </RadioGroup>
    </LinearLayout>

    <com.ravenwallet.presenter.customviews.BRText
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_rg_bips"
        android:layout_marginTop="20dp"
        android:text="@string/RecoverWallet.instruction"
        android:textColor="@color/almost_black"
        android:textSize="@dimen/sub_header"
        app:customTFont="CircularPro-Bold.otf" />

    <GridLayout
        android:id="@+id/wordgrid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="20dp"
        android:background="@drawable/phrase_field"
        android:columnCount="1"
        android:padding="6dp"
        android:paddingBottom="16dp"
        android:rowCount="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/word2"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray"
                    android:textCursorDrawable="@null"
                    app:customEFont="CircularPro-Medium.otf" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/word3"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/word4"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/word5"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/word6"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/word7"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/word8"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/word9"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/word10"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/word11"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/word12"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="11"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <com.ravenwallet.presenter.customviews.BREdit
                    android:id="@+id/word12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/extra_light_gray"
                    android:imeOptions="actionDone"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:nextFocusForward="@+id/fast_restore_key"
                    android:textColor="@color/almost_black"
                    android:textColorHint="@color/extra_light_gray" />

                <com.ravenwallet.presenter.customviews.BRText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

        </LinearLayout>

    </GridLayout>

    <com.ravenwallet.presenter.customviews.BRText
        android:id="@+id/fast_restore_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wordgrid_layout"
        android:layout_marginTop="20dp"
        android:text="@string/RecoverWallet.fastrestore_title"
        android:textColor="@color/almost_black"
        android:textSize="@dimen/sub_header"
        app:customTFont="CircularPro-Bold.otf" />

    <ImageButton
        android:id="@+id/fast_restore_faq"
        android:layout_width="@dimen/faq_dimen"
        android:layout_height="@dimen/faq_dimen"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/fast_restore_header"
        android:layout_below="@id/wordgrid_layout"
        android:background="@drawable/faq_question_black" />

    <com.ravenwallet.presenter.customviews.BREdit
        android:id="@+id/fast_restore_key"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/wordgrid_layout"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:backgroundTint="@color/extra_light_gray"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:lines="1"
        android:maxLength="5"
        android:textColor="@color/almost_black"
        android:textColorHint="@color/extra_light_gray"
        android:textCursorDrawable="@null"
        app:customEFont="CircularPro-Medium.otf" />

    <com.ravenwallet.presenter.customviews.BRButton
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/b_blue"
        android:elevation="8dp"
        android:padding="10dp"
        android:text="@string/RecoverWallet.next"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:buttonType="1"
        app:isBreadButton="true" />
</RelativeLayout>
