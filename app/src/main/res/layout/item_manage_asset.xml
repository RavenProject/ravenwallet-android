<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_toEndOf="@id/asset_ownership_image"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.ravenwallet.presenter.customviews.BRText
            android:id="@+id/root_asset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/total_assets_usd_color"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible"
            app:customTFont="CircularPro-Bold.otf"
            tools:text="Troncoin" />

        <com.ravenwallet.presenter.customviews.BRText
            android:id="@+id/asset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/total_assets_usd_color"
            android:textSize="18sp"
            app:customTFont="CircularPro-Bold.otf"
            tools:text="Troncoin" />

    </LinearLayout>

    <com.ravenwallet.presenter.customviews.BRButton
        android:id="@+id/item_visibility_action"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/sort_icon"
        android:textSize="16sp"
        app:buttonType="4"
        app:customTFont="CircularPro-Bold.otf"
        app:hasShadow="false"
        tools:background="@drawable/show_button_shape"
        tools:text="@string/show" />

    <ImageView
        android:id="@+id/sort_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_sort" />

</RelativeLayout>